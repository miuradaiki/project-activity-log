{
  "name": "project-activity-log",
  "version": "1.0.0",
  "description": "Project activity tracking and management application",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "cross-env NODE_ENV=development ELECTRON=true electron .",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development ELECTRON=true concurrently \"npm run dev\" \"npm run start\"",
    "electron:build": "cross-env NODE_ENV=production ELECTRON=true npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "cross-env ELECTRON=true npm run build && npx playwright test",
    "test:e2e:debug": "cross-env ELECTRON=true npm run build && npx playwright test --debug",
    "test:e2e:ui": "cross-env ELECTRON=true npm run build && npx playwright test --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 100",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:ci": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 100",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "prepare": "husky"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "lint-staged": "^16.2.1",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "framer-motion": "^12.23.22",
    "papaparse": "^5.5.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^2.15.1",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.project-activity-log.app",
    "productName": "Project Activity Log",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "storageUtils.js"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint -- --fix",
      "npm test -- --findRelatedTests --passWithNoTests"
    ],
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
